@model IEnumerable<ECBNewWeb.Models.MarketingLicensesModel>
    @{
        ViewBag.Title = "AllLicenses";
        Layout = "~/Views/Shared/_LayoutShefaa2.cshtml";
    }

    @section links {
        <link href="~/Content/css/bootstrap-glyphicons.min.css" rel="stylesheet" />
        <link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
        <link href="~/Content/assets/vendors/custom/datatables/datatables.bundle.rtl.css" rel="stylesheet" />
    }
    <main class="page-content">
        <div class="container-fluid">
            <div class="m-content">
                <div class="row">
                    <div class="col-md-12">
                        <!--begin::Portlet-->
                        <div class="m-portlet m-portlet--tabs">
                            <div class="m-portlet__head">
                                <div class="m-portlet__head-caption">
                                    <div class="m-portlet__head-title">
                                        <span class="m-portlet__head-icon m--hide">
                                            <i class="la la-gear"></i>
                                        </span>
                                        <h3 class="m-portlet__head-text">
                                            التراخيص
                                        </h3>
                                    </div>
                                </div>
                                <div class="m-portlet__head-tools">
                                    <ul class="m-portlet__nav">
                                        <li class="m-portlet__nav-item">
                                            <a href="/Licenses/AddLicenses" class="btn btn-accent m-btn  m-btn--pill m-btn--icon ">
                                                <span>
                                                    <i class="la la-plus"></i>
                                                    <span>اضافة ترخيص جديد</span>
                                                </span>
                                            </a>
                                        </li>
                                        <li class="m-portlet__nav-item"></li>

                                    </ul>
                                </div>
                            </div>
                            <div class="m-portlet__body">


                                <table class="table table-striped  table-bordered    " id="m_table_1" role="grid" aria-describedby="m_table_1_info" style="width: 974px;">
                                    <thead>

                                        <tr>
                                            <th>اسم الترخيص</th>
                                            <th>تاريخ البداية</th>
                                            <th> تاريخ النهاية </th>
                                            <th>الحالة</th>
                                            <th></th>
                                        </tr>

                                    </thead>
                                    <tbody>
                                @foreach (var item in Model)
                                {

                                        <tr>
                                            <td>@item.LicenseName</td>
                                            <td>
                                                @item.FromDate
                                            </td>
                                            <td>@item.ToDate</td>
                                            <td>
                                                @if (item.Active == 1)
                                                {
                                                    <label class="m-checkbox m-checkbox--single  m-checkbox--state-success ">
                                                        <input type="checkbox" name="Active" id="Active" checked disabled  value="@item.Active" >
                                                        <span></span>
                                                    </label>

                                                }
                                                else
                                                {
                                                    <label class="m-checkbox m-checkbox--single  m-checkbox--state-danger ">
                                                        <input type="checkbox" name="Active" id="Active"  disabled value="@item.Active">
                                                        <span></span>
                                                    </label>
                                                }
                                            
                                            
                                            </td>
                                            <td>
                                                <button id="" onclick="EditLicenses(@item.Id)" class="btn btn-outline-accent m-btn m-btn--icon m-btn--icon-only"> <i class="fa flaticon-edit"></i></button>
                                                @*<button id="" onclick="DeleteDonor(5)" class="btn btn-outline-danger m-btn m-btn--icon m-btn--icon-only"><i class="fa flaticon-delete"></i> </button>*@
                                            </td>

                                        </tr>
                                 }
                                    </tbody>

                                </table>


                            </div>

                            <div class="m-portlet__foot m-portlet__foot--fit">
                                <div class="m-form__actions">

                                </div>
                            </div>
                        </div>
                        <!--end::Portlet-->
                    </div>
                </div>
            </div>
        </div>
    </main>

<!-- Start Message When Edit -->


<!-- End Message When Edit -->

    <!--End Test Area-->
    <!-- Edit and Delete -->
    <div id="myModalEdit" class="modal fade " style="text-align:center">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>

    <div id="myModalDelete" class="modal fade " style="text-align:center">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title"></h4>
                </div>
                <div class="modal-body">

                </div>
            </div>
        </div>
    </div>





    <script>

    function EditLicenses(id) {

        $.get("@Url.Action("EditLicenses", "Licenses")/" + id,
        function (data) { $('.modal-body').html(data); })
        $('#myModalEdit').modal('show');
        $('#myModalEdit').on('hidden.bs.modal', function (e) {
            $('.modal-body').html("");
        })
    }

    function DeleteLicenses(id) {

        $.get("@Url.Action("Delete", "Donor")/" + id,
        function (data) { $('.modal-body').html(data); })
        $('#myModalDelete').modal('show');
        $('#myModalDelete').on('hidden.bs.modal', function (e) {
            $('.modal-body').html("");
        })
    }


    </script>


    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap4.min.js"></script>
    <script>

        $('#m_table_1').DataTable({
            "scrollY": 200,
            "scrollX": true,
        });
    </script>


@if (TempData["Msg"] != null)
{
    if (TempData["Msg"].ToString() == "تم الحفظ بنجاح")
    {
        <script>
            $(function (e) {
                swal({
                    title: "حفظ",
                    text: "تم الحفظ بنجاح",
                    type: "success",
                    confirmButtonClass: "btn btn-success"
                })

            });

        </script>
    }
    else
    {
        <script>
            $(function (e) {
                swal({
                    title: "خطأ",
                    text: "لم يتم الحفظ",
                    type: "error",
                    confirmButtonClass: "btn btn-danger"})
            });
        </script>
    }
}


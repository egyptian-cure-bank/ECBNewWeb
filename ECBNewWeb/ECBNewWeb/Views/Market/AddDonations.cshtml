@{
    ViewBag.Title = "AddDonations";
    Layout = "~/Views/Shared/_LayoutShefaa.cshtml";
}
    <!--Scripts-->
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/fontawesome.css" rel="stylesheet" />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<script src="//code.jquery.com/jquery-1.12.4.js"></script>
<script src="//code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<!--End Scripts-->
<!-- sidebar-wrapper------------------------------------Content---------------------------------------  -->
<main class="page-content">
        <div class="container-fluid">
            <h2>بيانات إيصال التبرع</h2>
            <p>إضافة تبرع</p>
            <hr>
            <div class="row">
                <div class="form-group col-md-3">
                    <label for="" class="">اسم المحصل</label>
                    <input type="text" class="form-control" value="اسم المحصل" disabled>
                </div>
                <div class="form-group col-md-3">
                    <label for="" class="">اسم المتبرع</label>
                    <input id="donors" type="text" class="form-control">
                </div>
                <div class="form-group col-md-3">
                    <label for="" class="">الموقع</label>
                    <select class="form-control">
                        <option>المقر</option>
                        <option>سيتى ستارز</option>
                    </select>
                    
                </div>
                <div class="form-group col-md-3">
                    <label for="" class="">نوع الإيصال</label>
                    <select class="form-control">
                        <option>إيصال 2018</option>
                        <option>إيصال 2017</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="" class="">تاريخ الإيصال</label>
                    <input type="date" class="form-control">
                </div>
                <div class="form-group col-md-3">
                    <label for="" class="">المبلغ</label>
                    <input type="text" class="form-control">
                </div>
                <div class="form-group col-md-3">
                    <label for="" class="">رقم الإيصال</label>
                    <input type="text" class="form-control">
                </div>
                <div class="form-group col-md-3">
                    <label for="" class="">العملة</label>
                    <select class="form-control">
                        <option>جنية مصرى</option>
                        <option>دولار امريكى</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="" class="">الغرض</label>
                    <select class="form-control">
                        <option>تبرع عام</option>
                        <option>صدقة</option>
                        <option>صدقة جارية</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="" class="">طريقة الدفع</label>
                    <select class="form-control">
                        <option>فيزا</option>
                        <option>نقدا</option>
                        <option>شيك</option>
                    </select>
                </div>
                <div class="form-group col-md-3">
                    <label for="" class="">وسيلة التعرف</label>
                    <select class="form-control">
                        <option>مواقع تبرع</option>
                        <option>متبرع سابق</option>
                        <option>إعلانات تليفزيون</option>
                    </select>
                </div>


            </div>
            <div class="row justify-content-end">
                <button class="btn btn-success  col-md-1 form-group">حفظ</button>

                <button class="btn btn-danger col-md-1 form-group">الغاء</button>
            </div>

            <hr>

            <div id="loadingIndicator" class="submit-progress d-none">
                <i class="fa fa-2x fa-spinner fa-spin"></i>
                <label>Please Wait....</label>
            </div>
        </div>

    </main>

<script type="text/javascript">
    $("#donors").autocomplete({
        source: function (request, response) {
            if ($("#donors").val != null) {
                $.ajax({
                    url: '@Url.Action("AutoCompleteDonor", "Donation")',
                    type: "GET",
                    data: { prefix: $("#donors").val() },
                    contentType: "application/json",
                    dataType: "json",
                    success: function (data) {
                        $("#donors").html(''),
                        response($.map(data, function (item) {
                            return {
                                label: item
                            }
                        }));
                    }
                });
            }
        },
        search: function (event, ui) {
            $(".submit-progress").removeClass("d-none");
        },
        response: function (event, ui) {
            $(".submit-progress").addClass("d-none");
        }
    });
</script>
<!-- page-content" -->


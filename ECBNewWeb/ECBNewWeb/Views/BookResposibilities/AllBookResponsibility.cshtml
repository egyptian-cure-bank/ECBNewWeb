@model IEnumerable<ECBNewWeb.Models.BookResposibilityModel>
@{
    ViewBag.Title = "AllHandleBookReceipts";
    Layout = "~/Views/Shared/_LayoutShefaa2.cshtml";
}

    <link href="~/Content/css/bootstrap-glyphicons.min.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="~/Content/assets/vendors/custom/datatables/datatables.bundle.rtl.css" rel="stylesheet" />

<main class="page-content">
    <div class="container-fluid">
        <div class="m-content">
            <div class="row">
                <div class="col-md-12">
                    <!--begin::Portlet-->
                    <div class="m-portlet m-portlet--tabs">
                        <div class="m-portlet__head">
                            <div class="m-portlet__head-caption">
                                <div class="m-portlet__head-title">
                                    <span class="m-portlet__head-icon m--hide">
                                        <i class="la la-gear"></i>
                                    </span>
                                    <h5 class="m-portlet__head-text">
                                        تسليم الدفاتر
                                    </h5>
                                </div>
                            </div>
                            <div class="m-portlet__head-tools">
                                <ul class="m-portlet__nav">
                                    <li class="m-portlet__nav-item">
                                        <a href="AddBookResponsibility" class="btn btn-accent m-btn  m-btn--pill m-btn--icon ">
                                            <span>
                                                <i class="la la-plus"></i>
                                                <span>اضافة تسليم لدفتر</span>
                                            </span>
                                        </a>
                                    </li>
                                    <li class="m-portlet__nav-item"></li>

                                </ul>
                            </div>
                        </div>
                        <div class="m-portlet__body">

                            <table class="table table-striped  table-bordered table-hover table-sm" id="m_table_1" role="grid" aria-describedby="m_table_1_info" style="width: 974px;">
                                <thead>

                                    <tr>
                                        <th>اسم الموظف</th>
                                        <th>نوع الدفتر</th>
                                        <th>رقم الدفتر</th>
                                        <th> تاريخ التسليم </th>
                                        <th>تاريخ التسوية</th>
                                        <th>رقم اول ايصال</th>
                                        <th>الحالة</th>
                                        <th></th>
                                    </tr>

                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {

                                        <tr>
                                            <td>@item.FirstName @item.lastName</td>
                                            <td>
                                                @item.ReceiptTypeName
                                            </td>
                                            <td>@item.BookNo</td>
                                            <td>
                                                @item.ReceiveDate
                                            </td>
                                            <td>@item.DeliveryDate</td>
                                            <td>@item.NextReceiptNo</td>
                                            <td>
                                                @if (item.DoneFlag == 1)
                                                {
                                                    @*<label class="m-checkbox m-checkbox--single  m-checkbox--state-success ">
                                                        <input type="checkbox" name="DoneFlag" id="DoneFlag" checked disabled value="@item.DoneFlag">
                                                        <span></span>
                                                    </label>*@
                                                    <span class="m-badge m-badge--success m-badge--dot"></span> @:&nbsp;
                                                    <span class="m--font-bold m--font-success" name="DoneFlag" id="DoneFlag">تم التسوية</span>

                                                }
                                                else
                                                {
                                                    @*<label class="m-checkbox m-checkbox--single  m-checkbox--state-danger ">
                                                        <input type="checkbox" name="DoneFlag" id="DoneFlag" disabled value="@item.DoneFlag">
                                                        <span></span>
                                                    </label>*@
                                                    <span class="m-badge m-badge--danger m-badge--dot"></span> @:&nbsp;
                                                    <span class="m--font-bold m--font-danger" name="DoneFlag" id="DoneFlag">لم يتم التسوية</span>
}


                                            </td>
                                            <td>
                                                <button id="" onclick="EditBookResponsibility(@item.RespId)" class="btn btn-outline-accent m-btn m-btn--icon m-btn--icon-only"> <i class="fa flaticon-edit"></i></button>
                                                @*<button id="" onclick="DeleteDonor(5)" class="btn btn-outline-danger m-btn m-btn--icon m-btn--icon-only"><i class="fa flaticon-delete"></i> </button>*@
                                            </td>

                                        </tr>
                                    }

                                </tbody>

                            </table>


                        </div>

                        <div class="m-portlet__foot m-portlet__foot--fit">
                            <div class="m-form__actions">

                            </div>
                        </div>
                    </div>
                    <!--end::Portlet-->
                </div>
            </div>
        </div>
    </div>
</main>

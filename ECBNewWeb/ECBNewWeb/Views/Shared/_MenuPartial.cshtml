<script>
    $(document).ready(function () {
        $.ajax({
            url: '/Home/MenuBulider/',
            method: 'get',
            dataType: 'json',
            success: function (data) {
                alert($("#menu"));
                buildMenu($("#menu"), data);
                //$.each(data.Children, function () {
                //    alert(this.ArabicName);
                //})
            },
            error: function () {
                alert("error");
}
        })
        function buildMenu(parent, items) {
            var li = '';
            var defaultCss = "m-menu__link-bullet m-menu__link-bullet--dot";
            $.each(items, function () {
                if (this.ParentMenuId == 0) {
                    li = $('<li class="m-menu__item  m-menu__item--submenu" aria-haspopup="true" m-menu-submenu-toggle="hover">' +
                                   '<a href=""' + 'class=' + '"m-menu__link m-menu__toggle"' + '>' +
                                      '<i class="' + this.CssClass + '"' + '></i>' +
                                              '<span class="m-menu__link-text">' + this.ArabicName + '</span>' +
                                                  '<i class=' + '"m-menu__ver-arrow la la-angle-right"' + '></i>' +
                                          '</a>' +
                                      '</li>')
                }
                else {
                    li = $('<li class="m-menu__item  m-menu__item--submenu" aria-haspopup="true" m-menu-submenu-toggle="hover">' +
                                       '<a href=""' + 'class=' + '"m-menu__link m-menu__toggle"' + '>' +
                                          '<i class="' + defaultCss + '"' + '><span></span></i>' +
                                                  '<span class="m-menu__link-text">' + this.ArabicName + '</span>' +
                                                      '<i class=' + '"m-menu__ver-arrow la la-angle-right"' + '></i>' +
                                              '</a>' +
                                          '</li>')
                }
          
            //if (!this.Active) {
            //    li.addClass('disabled');
            //}
            li.appendTo(parent);
            if (this.Children&&this.Children.length > 0) {
                var ul = $('<div class=' + '"m-menu__submenu">' +
                                '<span class=' + '"m-menu__arrow"></span>' +
                                    '<ul class=' + '"m-menu__subnav">' +
                                            '</ul>' +
                                        '</div>')
                ul.appendTo(li);
                buildMenu(ul,this.Children);
            }
            })

        }


    });
</script>
@model ECBNewWeb.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="ar" dir="rtl">
<head>
    <meta name="viewport" content="width=device-width" />
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @*<link href="~/Content/LoginStyle.css" rel="stylesheet" />*@
</head>
<body>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {

        <div id="login" style="text-align:right">
            <h3 class="text-center text-white pt-5">Login form</h3>
            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div class="login-box col-md-12">
                            <form id="login-form" class="form" action="" method="post">
                                <h3 class="text-center text-info">تسجيل الدخول</h3>
                                <div class="form-group">
                                    <label for="username" class="text-info">اسم المستخدم:</label><br>
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control"   } }) 
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    
                                </div>

                                <div class="form-group">
                                    <label for="password" class="text-info">كلمة المرور :</label><br>
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                                    <label for="remember-me" class="text-info"> <span><input id="remember-me" name="remember-me" type="checkbox"></span> <span>تذكرنى</span> </label><br>
                                    <input type="submit" name="submit" class="btn btn-info btn-md btn_left" value="دخول">
                                </div>
                                <div class="text-danger">
                                    <label class="field-validation-error ">
                                        @ViewBag.ErrorMessage
                                    </label>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

@model ECBNewWeb.Models.BookModel
<div class="">
    <div class="row">
        <div class="col-md-12">
            <!--begin::Portlet-->
            <div class="">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
                            <span class="m-portlet__head-icon m--hide">
                                <i class="la la-gear"></i>
                            </span>
                            <h3 class="m-portlet__head-text">
                                تعديل دفتر
                            </h3>
                        </div>
                    </div>
                </div>

                @using (Html.BeginForm("SaveEdit", "Book", FormMethod.Post))
                {
               
                        <!--begin::Form-->
                    @Html.HiddenFor(d => d.BookTypeId)
                    <div class="m-portlet__body">
                        <div class="row">
                            <div class="form-group m-form__group col-md-3">
                                <label for="">رقم الدفتر</label>
                                @*<input type="text" class="form-control m-input" placeholder="اسم الدفتر">*@
                                @Html.TextBoxFor(m => m.BookNo, new { @class = "form-control m-input", @type = "number", @placeholder = "رقم الدفتر" })
                                @Html.ValidationMessageFor(m => m.BookNo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group m-form__group col-md-3">
                                <label for="" class="">نوع الدفتر</label>
                                 @Html.DropDownListFor(x => x.RecTypeId, ViewBag.MyRecTypes as List<SelectListItem>, new { @class = "form-control m-input", @id = "govern" }) 
                                 @Html.ValidationMessageFor(m => m.RecTypeId, "", new { @class = "text-danger" }) 
                                @*<select id="govern" class="form-control m-input"></select>*@
                            </div>
                            <div class="form-group m-form__group col-md-3">
                                <label for="">رقم اول ايصال</label>
                                @*<input type="text" class="form-control m-input " placeholder="رقم اول ايصال">*@
                                @Html.TextBoxFor(m => m.FirstReceiptNo, new { @class = "form-control m-input", @type = "number", @placeholder = "رقم اول ايصال" })
                                @Html.ValidationMessageFor(m => m.FirstReceiptNo, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group m-form__group col-md-3">
                                <label for="">رقم اخر ايصال</label>
                                @*<input type="text" class="form-control m-input" placeholder="رقم اخر ايصال">*@
                                @Html.TextBoxFor(m => m.LastReceiptNo, new { @class = "form-control m-input", @type = "number", @placeholder ="رقم اخر ايصال" })
                                @Html.ValidationMessageFor(m => m.LastReceiptNo, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <br />
                        <div class="row">
                            <div class="form-group m-form__group col-md-3">

                                <label class="m-checkbox m-checkbox--state-success ">
                                    @*<input type="checkbox" checked> حالة الدفتر*@
                                    @Html.CheckBoxFor(m => m.IsActive, new { @name = "حالة الدفتر" })حالة الدفتر
                                    <span></span>
                                </label>
                            </div>

                        </div>



                    </div>

                            <div class="m-portlet__foot m-portlet__foot--fit">
                                <div class="m-form__actions">
                                    <button id="" class="btn btn-success m-btn--pill " type="submit">
                                        حفظ
                                        <span class="glyphicon glyphicon-ok"></span>
                                    </button>
                                    <button id="" class="btn btn-danger m-btn--pill" data-dismiss="modal" type="reset">
                                        الغاء
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </button>
                                </div>
                            </div>
                }

                <!--end::Form-->
            </div>
            <!--end::Portlet-->
        </div>
    </div>
</div>